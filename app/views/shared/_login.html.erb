<div id="search_box">
<% form_tag '/temps' , :method => 'get' do %>	
<table>
	<tr height="5">
		<td align="right">
			<select name="category_name">
				<%  if Category.all.length > 0 %>
					<% Category.all.each do |s| %>
						<option value="<%= s.id %>" <%= "selected" if params[:category_name] == s.id.to_s %>><%= s.name %></option>				
					<%end%>
					<%end %>
			</select>	
		</td>
		<td align="right">
		<%= text_field_tag :search, params[:search] %><%= image_submit_tag("/images/board/search.jpg", :align => "absmiddle") %>
		</td>
	</tr>
	<% end %>	
</table>
</div>