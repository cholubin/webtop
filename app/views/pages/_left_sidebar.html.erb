<% @categories.each do |category| %>
 	<h3><a class="<%= "on" if @category_name == category.name%>" href="/temps?category_name=<%= category.id %>"><%= category.name %></a></h3>
	<p>
	  <% @subcategories = category.subcategories  %>
	  <% @subcategories.each do |subcategory| %>
			<a class="<%= "on" if @subcategory_name == subcategory.name and @category_name == category.name%>" href="/temps?category_name=<%= category.id %>&subcategory_name=<%= subcategory.id %>">&nbsp;&nbsp;-&nbsp;<%= subcategory.name %></a> <br>  		
	  <%end  %>
	</p>
<%end%>


