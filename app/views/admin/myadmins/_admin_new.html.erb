<script type="text/javascript">			
$('#check_id').click(function(){
	if ($('#admin_id').val()=='') {
		alert('아이디를 입력하세요!');
		$(admin_id).focus();
		return false; 
	}else{ 
		if (input_check($('#admin_id').val()) == false){
			alert('아이디는 영문만 가능합니다!');
			$('#admin_id').val('');
			$('#admin_id').focus();
			return false;
		}else{
			$.ajax({
				data:'admin_id='+ $('#admin_id').val(), 
				dataType:'script', 
				type:'post', 
				url:'/admin/myadmins/id_check',
				success: function(request){
				}
				
			});
		}
	}
})

</script>
