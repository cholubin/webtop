<%= stylesheet_link_tag '/css/paginate.css' %>
<div id="feature_wrapper">
		<p1>웹탑프린트샵 자유게시판입니다.</p1>
		<% if ! flash[:notice].nil? %>
			<br>
			<span class="error_message_small"><%= flash[:notice].to_s %></span>
		<% end %>		
<br><br>

	</div>
	
	<% form_tag :action => :deleteSelection, :method => 'post' do %>			
	
	<table class="board_table">
		<input type="hidden" id="all_checked" value="false">
	    <thead class="board_thead">
	        <tr>
	            <th class="board_thead" width="60px">번호 </th>
				<td class="board_thead" width="250px"><center>질문</center></td>
	            <td class="board_thead" width="250px"><center>답변</center></td>
	            <td class="board_thead" width="65px"><center>조회</center></td>
				<td class="board_thead" width="30px"><center class="check_all" style="cursor:hand;">선택</center></td>
	        </tr>
	    </thead>
	 
	    <tbody class="board_tbody">
			<% 	if params[:page].to_i == 0 or params[:page].to_i == 1
					@temp_page = 0
				else
					@temp_page = params[:page].to_i - 1
				end
				@page_num = @total_count - (10 * @temp_page) %>
				

			<% @faqs.each do |faq| %>
	        <tr class="table_b","board_tbody">
	            <th class="board_tbody" width="70px"><center><%= @page_num %></center></th>
				<td class="board_tbody" width="250px" style="cursor:hand;" OnClick="location.href='/admin/faqs/<%= faq.id %>/edit'"><center><%= faq.question %></center></td>
	            <td class="board_tbody" width="250px" style="cursor:hand;" OnClick="location.href='/admin/faqs/<%= faq.id %>/edit'"><center><%= faq.answer %></center></td>
	            <td class="board_tbody" width="65px"><center><%= faq.hit_cnt %></center></td>
				<td class="board_tbody" width="30px"><center><input class="chk_box" type="checkbox" name="chk[<%= faq.id %>]"></center></td>
	        </tr>
	        <% @page_num -= 1
			end %>
	        
	    </tbody>
	</table>
	   

	<div id="line_bottom1"></div>
	<br>

		<!-- dm-pager Pagination -->
		<table width="730" >
			<tr>
				<td width="230">&nbsp;</td>
				<td width="350" style="align:center">
					<div class="pager">
					<%=Faq.search(params[:search], params[:page]).pager.to_html "/admin/faqs?search=#{params[:search]}" %>
					</div>
				</td>
				<td width="150" align="right">
						<a href="/admin/faqs/new"><img src="/images/admin/write.jpg"></a>										
						<%= image_submit_tag('/images/admin/delete.jpg', { :onclick => 'return confirm(\'정말 삭제하시겠습니까?\');' }) %>				
				</td>
			</tr>
			<% end %>
			<tr height="10">
				<td align="center" colspan="3">
						<% form_tag request.path + "?page=#{params[:page]}", :method => 'get' do %>								
					    <%= text_field_tag :search, params[:search] %><%= image_submit_tag("/images/board/search.jpg", :align => "absmiddle") %>	
						<% end %>
				</td>
			</tr>
					
		</table>
		

						
